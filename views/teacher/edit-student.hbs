    <label  class="heading"for="">Image</label>
    <input type="file" class="form-control"  name="Image">
  </div>
  <button type="submit" class="btn btn-success mt-4 eventbtn">Submit</button>
  </form> 
            </div>
        </div>
    </div>
</section>