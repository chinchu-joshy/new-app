             {{#each Writtenwork}}

          
         
<div class="card col-md-4 card-style card-today" style="width: 18rem;">
  
  <div class="card-body">
<form class="today-form " action="/class-work" method="post" enctype="multipart/form-data">
         
    <div class="form-group">
      <p>{{this.work}}</p>
    <label class="heading content-head"for="">{{this.head}}</label>
     <input type="file" class="form-control" name="head" >
    <input type="text" name="studentId" value="{{../students}}" hidden>
      <input type="text" name="workId" value="{{this._id}}" hidden>
       <input type="text" name="works" value="{{this.head}}" hidden>
  </div>
  
    
  <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form> 
     
  </div>
  
</div>

          {{/each}} 

