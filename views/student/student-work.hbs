     <input type="file" class="form-control" name="head" >
    <input type="text" name="studentId" value="{{../students}}" hidden>
      <input type="text" name="workId" value="{{this._id}}" hidden>
       <input type="text" name="works" value="{{this.topic}}" hidden>
  </div>
    
   <button type="submit" class="btn btn-success mt-4">Submit</button>
            </form> 
    


     
  </div>
  
</div>

  
